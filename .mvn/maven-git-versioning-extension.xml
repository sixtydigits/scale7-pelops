<gitVersioning>
    <updatePom>true</updatePom>
    <branch>
        <pattern>master</pattern>
        <versionFormat>${commit.short}</versionFormat>
    </branch>
    <tag>
        <pattern><![CDATA[v(?<tagVersion>[0-9].*)]]></pattern>
        <versionFormat>${tagVersion}</versionFormat>
    </tag>
    <commit>
        <versionFormat>${commit.short}</versionFormat>
    </commit>
</gitVersioning>